rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users: Allow users to read their own data and create it.
    // Allow any authenticated user to read public profiles.
    match /users/{userId} {
      allow read;
      allow create, update, delete: if request.auth.uid == userId;
    }

    // Posts: Allow any authenticated user to read/write.
    match /posts/{postId} {
      allow read, write: if request.auth != null;

      // Comments: Allow authenticated users to read/write comments.
      match /comments/{commentId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // Chats: Only participants can read/write messages
    match /chats/{chatId} {
      // The user must be one of the two UIDs in the chatId
      allow read, write: if request.auth != null && request.auth.uid in chatId.split('_');

      match /messages/{messageId} {
        allow read, write: if request.auth != null && request.auth.uid in resource.data.chatId.split('_');
      }
    }

    // Events: Authenticated users can read/write.
    match /events/{eventId} {
        allow read: if request.auth != null;
        allow create, update, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Farm Plots: Users can only manage their own plots.
    match /farmPlots/{plotId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Forum Topics: Authenticated users can read/write.
    match /forumTopics/{topicId} {
      allow read, write: if request.auth != null;
      // Replies
      match /replies/{replyId} {
         allow read, write: if request.auth != null;
      }
    }
    
    // Harvests: Users can only manage their own harvests and associated data.
    match /harvests/{harvestId} {
      allow read, write: if request.auth.uid == resource.data.userId;

      match /harvestPlots/{plotId} {
         allow read, write: if request.auth.uid == resource.data.userId;

         match /operations/{operationId} {
            allow read, write: if request.auth.uid == resource.data.userId;
         }
      }
    }

    // Items (inventory supplies): Users can only manage their own items.
    match /items/{itemId} {
        allow read, write: if request.auth.uid == resource.data.userId;
    }

    // Inventory Logs: Users can only manage their own logs.
    match /inventoryLogs/{logId} {
        allow read, write: if request.auth.uid == resource.data.userId;
    }
    
    // Machinery: Users can only manage their own machinery.
    match /machinery/{machineId} {
        allow read, write: if request.auth.uid == resource.data.userId;
        
        // Maintenance records for machinery
        match /maintenances/{maintId} {
           allow read, write: if request.auth.uid == resource.data.userId;
        }
    }

    // Marketplace Listings: Allow authenticated users to read.
    // Allow users to create, update, delete their own listings.
    match /listings/{listingId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
