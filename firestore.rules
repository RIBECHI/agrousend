
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regras para a coleção 'posts'
    match /posts/{postId} {
      // Qualquer pessoa (logada ou não) pode ler as publicações.
      allow read: if true;

      // Um usuário autenticado pode criar uma publicação se o authorId for o seu próprio UID.
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;

      // Um usuário autenticado só pode atualizar ou excluir suas próprias publicações.
      allow update, delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }

    // Regras para a coleção 'farmPlots'
    match /farmPlots/{plotId} {
      // Um usuário pode listar os talhões se a consulta filtrar pelo seu próprio userId.
      // Esta é a maneira correta e segura de permitir consultas em listas.
      allow list: if request.auth != null && request.auth.uid == request.query.filters.userId;
      
      // Um usuário pode ler, atualizar ou excluir um talhão se ele for o dono.
      allow get, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Um usuário pode criar um talhão se o userId do novo documento for o seu próprio UID.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
