rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para o Feed de Posts
    match /posts/{postId} {
      // Qualquer usuário logado pode ler os posts (para o feed funcionar)
      allow read: if request.auth != null;
      // Apenas o autor pode criar, atualizar ou deletar seus próprios posts
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }

    // Regras para os Talhões
    match /farmPlots/{plotId} {
      // Usuário só pode ler e escrever seus próprios talhões
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Regras para o Catálogo de Itens
    match /items/{itemId} {
       // Usuário só pode ler e escrever seus próprios itens
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Regras para o Controle de Estoque
    match /inventoryItems/{inventoryItemId} {
      // Usuário só pode ler e escrever seus próprios itens de estoque
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
