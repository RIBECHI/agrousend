rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }

    match /farmPlots/{plotId} {
      // Permite ler um documento específico, atualizar ou excluir se o usuário for o dono.
      // 'resource' refere-se ao documento como ele existe no banco de dados.
      allow get, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Permite listar documentos se a consulta filtrar pelo userId do usuário logado.
      // Permite criar um documento se o 'userId' do NOVO documento for o UID do usuário.
      // 'request.resource' refere-se ao documento como ele é na solicitação de escrita/criação.
      allow list, create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
