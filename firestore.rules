rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regras para a coleção 'posts'
    match /posts/{postId} {
      // Qualquer pessoa pode ler as publicações.
      allow read: if true;
      // Um usuário autenticado pode criar, atualizar e excluir suas próprias publicações.
      allow write: if request.auth != null && request.auth.uid == request.resource.data.authorId;
    }

    // Regras para a coleção 'farmPlots'
    match /farmPlots/{plotId} {
      // Permite ler (get) e escrever (create, update, delete) em um documento específico
      // se o userId do documento corresponder ao uid do usuário.
      allow get, write: if request.auth != null && request.auth.uid == request.resource.data.userId;

      // Permite listar (query) documentos apenas se a consulta filtrar explicitamente
      // pelo userId do usuário logado.
      allow list: if request.auth != null && request.query.filters.size() > 0 && request.query.filters[0].field.string_value == 'userId' && request.query.filters[0].value.string_value == request.auth.uid;
    }
  }
}
