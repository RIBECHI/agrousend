
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // As postagens podem ser lidas por qualquer pessoa
    match /posts/{postId} {
      allow read: if true;
      // As postagens só podem ser criadas, atualizadas ou excluídas pelo autor
      allow write: if request.auth != null && request.auth.uid == request.resource.data.authorId;
    }
  }
}

    